{% extends 'layout.html.twig' %} 

{% block title %} admin Membres{% endblock %}

{% block content %}
<div class="row mt-3 justify-content-center text-center">
  <h1 class="text-danger ">Liste des Membres</h1>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Pseudo</th>
      <th scope="col">Nom</th>
      <th scope="col">Prénom</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {% for user in user %}
    <tr>
      <th scope="row">{{ user.id}}</th>
      <td>{{ user.pseudo}}</td>
      <td>{{ user.nom }}</td>
      <td>{{ user.prenom }}</td>
      <td>{{ user.email}}</td>
      <td scope="row">  
              <a href=""><i class="fas fa-eye mx-1 text-warning"></i>
              </a>
              <a href=""
                ><i class="fas fa-edit mx-1 text-success"></i>
              </a>
              <a href=""><i class="fas fa-trash mx-1 text-danger" onclick="return confirm(`Etes vous sûr de vouloir supprimer cette fiche? `)"></i></a>
          </td>
    </tr>
    {% endfor %}
  </tbody>
  </table>
</div>
{% endblock %}
