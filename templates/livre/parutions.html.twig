{% extends 'layout.html.twig' %} 

{% block title %} Les dernières parutions{% endblock %}

{% block content %}
<div class="row mt-5 justify-content-center text-center">
  <h1 class="text-center text-danger" style="margin: 2%">Les dernières parutions </h1>
  <div class="container">
    <div class="row">

      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-header"><a class="text-decoration-none" href="{{path("livre_parution")}}" class="text-body">Ambiances</a>
          </div>
                <ul class="list-group list-group-flush">
                {% for categories in categories %}
                <li class="list-group-item btn btn-dark text-center"><a class="text-decoration-none" href="{{path("livre_categorie",{id:categories.id})}}">
                  {{categories.nom}}
                </a></li> 
                {% endfor %} 
                </ul>
          </div>
      </div>

      {% for livres in livres %}
      <div class="col col-md-3 mt-1">
        <div class="card" style="width: 100%">
          <div class="card-body">
            <h5 class="card-title">{{ livres.titre }}</h5>
            <p class="card-text">{{ livres.categorie.nom }}</p>
             <a href="{{path("livre_show", {id: livres.id})}}"><img width="100%" src="{{ asset('photosLivre/' ~ livres.photoCouv) }}" alt="{{livres.titre}}"></a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
 
</div>
{% endblock %}